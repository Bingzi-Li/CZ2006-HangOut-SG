<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp"
    android:padding="15dp"
    android:id="@+id/vendorReservationLayout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/planIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/reservation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/planIcon"
        android:text="User who reserved"
        android:id="@+id/UserIdInReservation"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/ReservationTimeInVendor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="49dp"
        android:layout_toRightOf="@+id/planIcon"
        android:text="time" />

</RelativeLayout>
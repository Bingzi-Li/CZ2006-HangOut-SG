<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/signUpAsVendorEmail"
            android:textSize="18sp"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/signUpAsVendorEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_below="@id/signUpAsVendorEmail"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@id/signUpAsVendorPassword"
            android:textSize="18sp"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/signUpAsVendorPassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:ems="10"
            android:layout_below="@id/signUpAsVendorEmail"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"/>

        <View
            android:id="@+id/lineSeparator"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_below="@id/signUpAsVendorPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:layout_below="@id/lineSeparator"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@id/signUpAsVendorFirstName"
            android:textSize="18sp"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/signUpAsVendorFirstName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@id/lineSeparator"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_below="@id/signUpAsVendorFirstName"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@id/signUpAsVendorLastName"
            android:textSize="18sp"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/signUpAsVendorLastName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_below="@id/signUpAsVendorFirstName"/>

        <RadioGroup
            android:id="@+id/signUpAsVendorSelectGender"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUpAsVendorLastName"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

            <RadioButton
                android:id="@+id/signUpAsVendorRadioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:checked="true" />

            <RadioButton
                android:id="@+id/signUpAsVendorRadioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />

            <RadioButton
                android:id="@+id/signUpAsVendorRadioOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others" />

        </RadioGroup>


        <Button
            android:id="@+id/signUpAsVendorSignUpBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:background="@drawable/add_plan_round_corner_bg"
            android:textSize="20sp"
            android:paddingHorizontal="20dp"
            android:layout_below="@id/signUpAsVendorSelectGender"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:clickable="true"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/signUpAsVendorChangeToCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please uncheck 'vendor tunnel' to sign up as customer"
            android:textColor="@color/colorLoginButton"
            android:textSize="13sp"
            android:layout_below="@id/signUpAsVendorSignUpBtn"
            android:layout_marginBottom="40dp"
            />

        <!--<TextView-->
            <!--android:id="@+id/vendorSignUpTest"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/signUpAsVendorSignUpBtn"/>-->


    </RelativeLayout>
</ScrollView>
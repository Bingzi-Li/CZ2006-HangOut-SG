<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


    <ImageView
        android:id="@+id/me_shop_in_plan_icon"
        android:layout_width="68dp"
        android:layout_height="64dp"
        android:clickable="false"
        android:src="@drawable/vendor_shopicon"
        />

    <TextView
        android:id="@+id/me_plan_shopDateTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:text="DateTime"
        android:gravity="right"
        android:layout_toLeftOf="@id/me_plan_shop_deleteBtn"/>

    <TextView
        android:id="@+id/me_plan_shopNameTextView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="ShopName"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/me_shop_in_plan_icon"
        />

    <TextView
        android:id="@+id/me_plan_shopAddressTextView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Address"
        android:layout_below="@id/me_plan_shopNameTextView"
        android:layout_toRightOf="@id/me_shop_in_plan_icon"/>


    <ImageButton
        android:id="@+id/me_plan_shop_deleteBtn"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/mine_shop_delete_btn" />


</RelativeLayout>







